@model PROGRA_PARCIAL.ViewModel.RemesaViewModel

@{
    ViewData["Title"] = "Formulario de Remesa";
}

<div class="container">
    <div class="row">
        <!-- Sección del Formulario -->
        <div class="col-md-6">
            <h2>Formulario de Remesa</h2>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <form asp-controller="Remesa" asp-action="Registrar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Remesa.Remitente" class="control-label"></label>
                    <input asp-for="Remesa.Remitente" class="form-control" />
                    <span asp-validation-for="Remesa.Remitente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remesa.Destinatario" class="control-label"></label>
                    <input asp-for="Remesa.Destinatario" class="form-control" />
                    <span asp-validation-for="Remesa.Destinatario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remesa.PaísDestino" class="control-label"></label>
                    <input asp-for="Remesa.PaísDestino" class="form-control" />
                    <span asp-validation-for="Remesa.PaísDestino" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remesa.TipoMoneda" class="control-label"></label>
                    <select asp-for="Remesa.TipoMoneda" class="form-control">
                        <option value="">Seleccione una moneda</option>
                        <option value="USD">USD</option>
                        <option value="BTC">BTC</option>
                    </select>
                    <span asp-validation-for="Remesa.TipoMoneda" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remesa.Monto" class="control-label"></label>
                    <input asp-for="Remesa.Monto" class="form-control" />
                    <span asp-validation-for="Remesa.Monto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <!-- Tabla -->
        <div class="col-md-6">
            <h2>Lista de Remesas</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Remitente</th>
                        <th>Destinatario</th>
                        <th>País Destino</th>
                        <th>Tipo Moneda</th>
                        <th>Monto</th>
                        <th>Fecha Envío</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var remesa in Model.Remesas)
                    {
                        <tr>
                            <td>@remesa.Remitente</td>
                            <td>@remesa.Destinatario</td>
                            <td>@remesa.PaísDestino</td>
                            <td>@remesa.TipoMoneda</td>
                            <td>@remesa.Monto</td>
                            <td>@remesa.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@remesa.Estado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
