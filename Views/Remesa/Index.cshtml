@model PROGRA_PARCIAL.Models.Remesa

@{
    ViewData["Title"] = "Registrar Remesa";
}


<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center mb-0">Registrar Remesa</h2>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Create" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="NombreRemitente" class="form-label">Nombre del Remitente</label>
                                    <input type="text" asp-for="NombreRemitente" class="form-control" placeholder="Ingrese el nombre del remitente" required>
                                    <span asp-validation-for="NombreRemitente" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="NombreDestinario" class="form-label">Nombre del Destinatario</label>
                                    <input type="text" asp-for="NombreDestinario" class="form-control" placeholder="Ingrese el nombre del destinatario" required>
                                    <span asp-validation-for="NombreDestinario" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="PaisOrigen" class="form-label">País de Origen</label>
                                    <input type="text" asp-for="PaisOrigen" class="form-control" placeholder="País de origen" required>
                                    <span asp-validation-for="PaisOrigen" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="PaisDestino" class="form-label">País de Destino</label>
                                    <input type="text" asp-for="PaisDestino" class="form-control" placeholder="País de destino" required>
                                    <span asp-validation-for="PaisDestino" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="MontoEnviado" class="form-label">Monto Enviado</label>
                                    <input type="number" asp-for="MontoEnviado" class="form-control" step="0.01" placeholder="Ingrese el monto enviado" required>
                                    <span asp-validation-for="MontoEnviado" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="TipoMoneda" class="form-label">Tipo de Moneda</label>
                                    <select asp-for="TipoMoneda" class="form-select" required>
                                        <option value="">Seleccione una moneda</option>
                                        <option value="USD">USD</option>
                                        <option value="BTC">BTC</option>
                                    </select>
                                    <span asp-validation-for="TipoMoneda" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label for="Estado" class="form-label">Estado de la Transacción</label>
                                    <input type="text" asp-for="Estado" class="form-control" placeholder="Estado de la transacción" required>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-4 d-grid">
                                <button type="submit" class="btn btn-dark btn-lg">Registrar Remesa</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
