@model IEnumerable<PROGRA_PARCIAL.Models.Remesa>


@{
    ViewData["Title"] = "Listado de Transacciones";
}
<body class="bg-light">
    <div class="container-fluid py-4">
        <h2 class="text-center mb-4"><b>Listado de Transacciones</b></h2>
        
        <div class="card shadow-lg">
            <div class="card-body p-0">
                <div class="table-scroll">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="bg-dark text-white sticky-top">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Remitente</th>
                                <th scope="col">Destinatario</th>
                                <th scope="col">Origen</th>
                                <th scope="col">Destino</th>
                                <th scope="col">Monto Enviado</th>
                                <th scope="col">Moneda</th>
                                <th scope="col">Tasa</th>
                                <th scope="col">Monto Final</th>
                                <th scope="col">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var remesa in Model)
                            {
                                <tr>
                                    <td>@remesa.Id</td>
                                    <td>@remesa.NombreRemitente</td>
                                    <td>@remesa.NombreDestinario</td>
                                    <td>@remesa.PaisOrigen</td>
                                    <td>@remesa.PaisDestino</td>
                                    <td>@remesa.MontoEnviado.ToString("N2")</td>
                                    <td>@remesa.TipoMoneda</td>
                                    <td>@remesa.TasaCambio.ToString("N4")</td>
                                    <td>@remesa.MontoFinal.ToString("N2")</td>
                                    <td><b>@remesa.Estado</b></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
